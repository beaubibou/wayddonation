<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible">
    <TextView
        android:layout_marginTop="15dp"
         android:textStyle="normal|bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wDonation"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        />

    <TextView
        android:textStyle="normal|bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:text="Pour Android"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"

    />
    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wDonation et les logos"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sont des marques de WAYDapps"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
      />


    <TextView
        android:layout_marginTop="15dp"
        android:textStyle="normal|bold"
        android:id="@+id/textversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:text="Version de l'application"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
         />

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal|bold"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"

        tools:text="Version" />


    <TextView
        android:id="@+id/regleconfidence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:text="Politique de confidentialité"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:visibility="visible" />

    <TextView
        android:id="@+id/cgu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conditions générales"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:visibility="visible"
      />


</LinearLayout>


